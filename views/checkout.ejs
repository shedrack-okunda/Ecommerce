<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Purry Boutique</title>
    <style>
      :root {
        --theme-color: #e6e;
      }

      body {
        font-family: Arial, sans-serif;
        margin: 0;
      }

      header {
        position: fixed;
        display: flex;
        align-items: center;
        width: 100%;
        background-color: var(--theme-color);
        color: white;
        justify-content: space-between;
        padding: 5px 5px;
      }

      .headerDiv {
        display: flex;
        align-items: center;
      }

      .headerDiv .logo a {
        align-items: center;
        color: #fff;
        font-size: 30px;
        font-weight: 600;
        text-decoration: none;
        margin-left: 20px;
      }

      header .sidebar {
        display: inline-flex;
      }

      .sidebar li {
        list-style: none;
      }

      .sidebar li a {
        color: #fff;
        font-size: 18px;
        font-weight: 600;
        margin-left: 15px;
        text-decoration: none;
        transition: all 0.13s ease;
      }

      .sidebar li a:hover {
        color: cyan;
      }

      .sidebar ul {
        display: flex;
        flex-direction: row;
      }

      .icon {
        background: none;
        border: none;
        color: #fff;
        font-size: 20px;
        cursor: pointer;
        display: none;
      }

      .icon.cancel-btn {
        position: absolute;
        right: 30px;
        top: 20px;
      }

      #toggleSidebar {
        margin-right: 20px;
      }

      .container {
        display: flex;
        flex-direction: column;
      }

      main {
        flex: 1;
        padding: 20px;
        overflow-y: auto;
        margin-top: 50px;
      }

      @media (max-width: 768px) {
        body.disabledScroll {
          overflow: hidden;
        }

        .icon {
          display: block;
        }

        .icon.hide {
          display: block;
        }

        header .sidebar {
          position: fixed;
          top: 0;
          left: -100vh;
          height: 100vh;
          width: 150px;
          background-color: var(--theme-color);
          display: block;
          padding: 20px 0;
          text-align: center;
          transition: all 0.3s ease;
        }

        header .sidebar ul {
          display: flex;
          flex-direction: column;
        }

        header .sidebar.active {
          left: 0%;
        }

        header .sidebar li {
          margin-top: 45px;
        }

        header .sidebar li a {
          font-size: 20px;
          font-weight: 600;
        }
      }

      .logout-button {
        background-color: black;
        color: white;
        border: none;
        padding: 10px 20px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        border-radius: 4px;
        transition: background-color 0.3s ease;
        margin-right: 30px;
        border-radius: 5px;
      }

      .logout-button:hover {
        transform: translateY(-5%);
        box-shadow: 2px 0 2px #000;
      }

      .pay {
        display: flex;
        flex-direction: column;
        gap: 20px;
        max-width: 400px;
        margin: 0 auto;
      }

      .pay input {
        padding: 10px;
        font-size: 16px;
        border: 1px solid #ddd;
        border-radius: 4px;
      }

      .pay button {
        background-color: var(--theme-color);
        color: white;
        border: none;
        padding: 15px;
        cursor: pointer;
        border-radius: 4px;
        font-size: 16px;
      }

      .pay button:hover {
        background-color: #e5e;
      }

      .pay-summary {
        text-align: center;
        font-size: 18px;
        margin-bottom: 20px;
      }
    </style>
  </head>
  <body>
    <header class="header">
      <div class="headerDiv">
        <div class="logo">
          <a href="#">Purry Boutique</a>
        </div>
      </div>

      <nav id="sidebar" class="sidebar">
        <ul>
          <div>
            <button class="icon cancel-btn">X</button>
          </div>

          <li><a href="/dashboard">Home</a></li>
          <li><a href="/myCart">My Cart</a></li>
          <li><a href="/admin">Admin</a></li>
        </ul>
      </nav>

      <a href="/logout"><button class="logout-button">Logout</button></a>

      <button id="toggleSidebar" class="icon menu-btn">â˜°</button>
    </header>

    <div class="container">
      <main>
        <div class="pay">
          <div class="pay-summary" id="total-price"></div>
          <input type="text" id="phone" placeholder="Enter your phone number" />
          <button id="payBtn">Pay</button>
        </div>
      </main>
    </div>
    <script>
      const body = document.querySelector("body");
      const header = document.querySelector(".header");
      const sidebar = document.querySelector(".sidebar");
      const menuBtn = document.querySelector(".menu-btn");
      const cancelBtn = document.querySelector(".cancel-btn");

      menuBtn.onclick = () => {
        sidebar.classList.add("active");
        menuBtn.classList.add("hide");
        body.classList.add("disabledScroll");
      };

      cancelBtn.onclick = () => {
        sidebar.classList.remove("active");
        menuBtn.classList.remove("hide");
        body.classList.remove("disabledScroll");
      };

      window.onscroll = () => {
        this.scrollY > 20
          ? header.classList.add("sticky")
          : header.classList.remove("sticky");
      };

      function getTotalPriceFromParams() {
        const urlParams = new URLSearchParams(window.location.search);
        return urlParams.get("totalPrice");
      }

      function displayTotalPrice() {
        const totalPrice = getTotalPriceFromParams();
        document.getElementById("total-price").textContent =
          `Total Price: kshs. ${totalPrice}`;
      }

      document
        .getElementById("payBtn")
        .addEventListener("click", async function () {
          const phone = document.getElementById("phone").value;
          const totalPrice = getTotalPriceFromParams();

          if (!phone) {
            alert("Please enter your phone number.");
            return;
          }

          try {
            const response = await fetch("http://localhost:3000/stkPush", {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify({
                phone: phone,
                amount: totalPrice,
              }),
            });

            if (response.ok) {
              alert("Payment request sent successfully.");
              // window.location.href = `/checkout?totalPrice=${totalPrice}`;
            } else {
              alert("Failed to process payment.");
            }
          } catch (error) {
            console.error("Error:", error);
            alert("An error occurred while processing the payment.");
          }
        });

      // Display the total price when the page loads
      displayTotalPrice();
    </script>
  </body>
</html>
