<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Purry Boutique</title>
    <link rel="stylesheet" href="/styles.css" />
    <style>
      .container {
        display: flex;
        justify-content: center;
        padding: 20px;
      }

      .checkout-container {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        padding: 20px;
        max-width: 800px;
        margin: 0 auto;
        gap: 20px;
        border-radius: 10px;
      }

      .receipt {
        flex: 1;
        background-color: #fff;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 300px;
      }

      .receipt h3 {
        text-align: center;
      }

      .items-ordered ul {
        list-style: none;
        padding: 0;
      }

      .pay {
        display: flex;
        flex-direction: column;
        gap: 20px;
        width: 300px;
        margin: 0 auto;
      }

      .pay input {
        padding: 10px;
        font-size: 16px;
        border: 1px solid #ddd;
        border-radius: 4px;
      }

      .pay button {
        background-color: var(--theme-color);
        color: white;
        border: none;
        padding: 15px;
        cursor: pointer;
        border-radius: 4px;
        font-size: 16px;
      }

      .pay button:hover {
        background-color: var(--hover-color);
      }

      .pay-summary {
        text-align: center;
        font-size: 18px;
        margin-bottom: 20px;
      }

      @media (max-width: 768px) {
        .checkout-container {
          display: flex;
          flex-direction: column;
          align-items: center;
        }

        .receipt,
        .pay {
          width: 100%;
        }
      }
      .items {
        display: flex;
        flex-direction: column;
        gap: 10px;
      }

      .item {
        position: relative;
        display: flex;
        justify-content: space-between;
        align-items: center;
        overflow: hidden;
        background: #fff;
        transition: transform 0.2s;
        padding: 5px;
        border-bottom: 1px solid #ccc;
      }

      .item-details h3 {
        margin: 0 0 10px 0;
        font-size: 18px;
        margin: 0;
      }

      .item-price {
        position: absolute;
        font-size: 16px;
        color: var(--theme-color);
        font-weight: bold;
        top: 0;
        right: 0;
        margin: 0;
      }

      #total-price {
        font-weight: bold;
        color: var(--theme-color);
      }

      .qr-code-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
      }

      .qr-code-container img {
        display: flex;
        align-items: center;
        justify-content: center;
      }

      @media (max-width: 768px) {
        .items {
          display: flex;
          flex-direction: column;
          gap: 10px;
        }

        .item {
          display: flex;
          position: relative;
          justify-content: space-between;
          align-items: center;
          overflow: hidden;
          background: #fff;
          transition: transform 0.2s;
          padding: 5px;
        }

        .item-details h3 {
          margin: 0 0 10px 0;
          font-size: 18px;
          margin: 0;
        }

        .item-price {
          position: absolute;
          font-size: 16px;
          color: var(--theme-color);
          font-weight: bold;
          top: 0;
          right: 0;
          margin: 0;
        }

        #total-price {
          font-weight: bold;
          color: var(--theme-color);
        }
      }
    </style>
  </head>
  <body>
    <header class="header">
      <div class="headerDiv">
        <div class="logo">
          <a href="#">Purry Boutique</a>
        </div>
      </div>

      <nav id="sidebar" class="sidebar">
        <ul>
          <div>
            <button class="icon cancel-btn">X</button>
          </div>

          <li><a href="/dashboard">Home</a></li>
          <li><a href="/myCart">My Cart</a></li>
          <li><a href="/admin">Admin</a></li>
        </ul>
      </nav>

      <a href="/logout"><button class="logout-button">Logout</button></a>

      <button id="toggleSidebar" class="icon menu-btn">â˜°</button>
    </header>

    <div class="container">
      <main>
        <div class="checkout-container">
          <div class="qr-code-container">
            <h3>Scan the QR Code to view receipt details</h3>
            <img src="<%= qrCodeDataURL %>" alt="Receipt QR Code" />
          </div>

          <!-- <div class="receipt">
            <h3>Receipt</h3>
            <p><strong>Date:</strong> <span id="date"></span></p>
            <p><strong>Time:</strong> <span id="time"></span></p>
            <div class="items-ordered">
              <strong>Items Ordered:</strong>
              <div class="items"></div>
              <ul id="items-list"></ul>
            </div>
            <p><span id="total-price"></span></p>
          </div> -->

          <div class="pay">
            <div class="pay-summary" id="total-price"></div>
            <input
              type="text"
              id="phone"
              placeholder="Enter MPESA phone number"
            />
            <button id="payBtn">Pay</button>
          </div>
        </div>
      </main>
    </div>
    <script>
      const body = document.querySelector("body");
      const header = document.querySelector(".header");
      const sidebar = document.querySelector(".sidebar");
      const menuBtn = document.querySelector(".menu-btn");
      const cancelBtn = document.querySelector(".cancel-btn");

      menuBtn.onclick = () => {
        sidebar.classList.add("active");
        menuBtn.classList.add("hide");
        body.classList.add("disabledScroll");
      };

      cancelBtn.onclick = () => {
        sidebar.classList.remove("active");
        menuBtn.classList.remove("hide");
        body.classList.remove("disabledScroll");
      };

      window.onscroll = () => {
        this.scrollY > 20
          ? header.classList.add("sticky")
          : header.classList.remove("sticky");
      };

      // add date and time dynamically
      document.addEventListener("DOMContentLoaded", function () {
        const date = new Date();
        document.getElementById("date").textContent = date.toLocaleDateString();
        document.getElementById("time").textContent = date.toLocaleTimeString();
      });

      function getTotalPriceFromParams() {
        const urlParams = new URLSearchParams(window.location.search);
        return urlParams.get("totalPrice");
      }

      function displayTotalPrice() {
        const totalPrice = getTotalPriceFromParams();
        document.getElementById("total-price").textContent =
          `Total Price: kshs. ${totalPrice}`;
      }

      document
        .getElementById("payBtn")
        .addEventListener("click", async function () {
          const phone = document.getElementById("phone").value;
          const totalPrice = getTotalPriceFromParams();

          if (!phone) {
            alert("Please enter your phone number.");
            return;
          }

          try {
            const response = await fetch("http://localhost:3000/stkPush", {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify({
                phone: phone,
                amount: totalPrice,
              }),
            });

            if (response.ok) {
              alert("Payment request sent successfully.");
              // window.location.href = `/checkout?totalPrice=${totalPrice}`;
            } else {
              alert("Failed to process payment.");
            }
          } catch (error) {
            console.error("Error:", error);
            alert("An error occurred while processing the payment.");
          }
        });

      async function fetchCartItems() {
        try {
          const response = await fetch("http://localhost:3000/getCartItems");
          const data = await response.json();

          if (data.Status === "Success") {
            displayCartItems(data.data);
          } else {
            console.error("Failed to retrieve cart items");
          }
        } catch (error) {
          console.error("Error fetching cart items:", error);
        }
      }

      function displayCartItems(items) {
        const itemsContainer = document.querySelector(".items");
        const totalItemsElement = document.getElementById("total-items");
        const totalPriceElement = document.getElementById("total-price");
        itemsContainer.innerHTML = ""; // Clear any existing content

        let totalItems = 0;
        let totalPrice = 0;

        items.forEach((item) => {
          totalItems++;
          totalPrice += item.price;

          const itemElement = document.createElement("div");
          itemElement.classList.add("item");

          const itemDetails = document.createElement("div");
          itemDetails.classList.add("item-details");

          const itemTitle = document.createElement("h3");
          itemTitle.textContent = item.title;

          const itemPrice = document.createElement("p");
          itemPrice.classList.add("item-price");
          itemPrice.textContent = `kshs. ${item.price}`;

          itemDetails.appendChild(itemTitle);
          itemDetails.appendChild(itemPrice);

          itemElement.appendChild(itemDetails);

          itemsContainer.appendChild(itemElement);
        });

        totalItemsElement.textContent = `Total Items: ${totalItems}`;
        totalPriceElement.textContent = `Total Price: kshs. ${totalPrice}`;
      }

      // Fetch cart items when the page loads
      fetchCartItems();

      // Display the total price when the page loads
      displayTotalPrice();
    </script>
  </body>
</html>
