<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Purry Boutique</title>
    <style>
      :root {
        --theme-color: #e6e;
      }

      body {
        font-family: Arial, sans-serif;
        margin: 0;
      }

      header {
        position: fixed;
        display: flex;
        align-items: center;
        width: 100%;
        background-color: var(--theme-color);
        color: white;
        justify-content: space-between;
        padding: 5px 5px;
      }

      .headerDiv {
        display: flex;
        align-items: center;
      }

      .headerDiv .logo a {
        align-items: center;
        color: #fff;
        font-size: 30px;
        font-weight: 600;
        text-decoration: none;
        margin-left: 20px;
      }

      header .sidebar {
        display: inline-flex;
      }

      .sidebar li {
        list-style: none;
      }

      .sidebar li a {
        color: #fff;
        font-size: 18px;
        font-weight: 600;
        margin-left: 15px;
        text-decoration: none;
        transition: all 0.13s ease;
      }

      .sidebar li a:hover {
        color: cyan;
      }

      .sidebar ul {
        display: flex;
        flex-direction: row;
      }

      .icon {
        background: none;
        border: none;
        color: #fff;
        font-size: 20px;
        cursor: pointer;
        display: none;
      }

      .icon.cancel-btn {
        position: absolute;
        right: 30px;
        top: 20px;
      }

      #toggleSidebar {
        margin-right: 20px;
      }

      .container {
        display: flex;
        flex-direction: column;
      }

      main {
        flex: 1;
        padding: 20px;
        overflow-y: auto;
        margin-top: 50px;
      }

      @media (max-width: 768px) {
        body.disabledScroll {
          overflow: hidden;
        }

        .icon {
          display: block;
        }

        .icon.hide {
          display: block;
        }

        header .sidebar {
          position: fixed;
          top: 0;
          left: -100vh;
          height: 100vh;
          width: 150px;
          background-color: var(--theme-color);
          display: block;
          padding: 20px 0;
          text-align: center;
          transition: all 0.3s ease;
        }

        header .sidebar ul {
          display: flex;
          flex-direction: column;
        }

        header .sidebar.active {
          left: 0%;
        }

        header .sidebar li {
          margin-top: 45px;
        }

        header .sidebar li a {
          font-size: 20px;
          font-weight: 600;
        }
      }

      /* Add this CSS to your existing styles */

      table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
      }

      th,
      td {
        border: 1px solid #ddd;
        padding: 8px;
      }

      th {
        background-color: var(--theme-color);
        color: white;
      }

      tr:nth-child(even) {
        background-color: #f2f2f2;
      }

      .edit-button {
        background-color: var(--theme-color);
        border: none;
        color: white;
        padding: 5px 10px;
        cursor: pointer;
      }

      .edit-button:hover {
        background-color: #e7e;
      }

      .logout-button {
        background-color: black;
        color: white;
        border: none;
        padding: 10px 20px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        border-radius: 4px;
        transition: background-color 0.3s ease;
        margin-right: 30px;
        border-radius: 5px;
      }

      .logout-button:hover {
        transform: translateY(-5%);
        box-shadow: 2px 0 2px #000;
      }
    </style>
  </head>
  <body>
    <header class="header">
      <div class="headerDiv">
        <div class="logo">
          <a href="#">Purry Boutique</a>
        </div>
      </div>

      <nav id="sidebar" class="sidebar">
        <ul>
          <div>
            <button class="icon cancel-btn">X</button>
          </div>

          <li><a href="/dashboard">Home</a></li>
          <li><a href="/users">Users</a></li>
          <li><a href="/products">Products</a></li>
        </ul>
      </nav>

      <a href="/logout"><button class="logout-button">Logout</button></a>

      <button id="toggleSidebar" class="icon menu-btn">â˜°</button>
    </header>

    <div class="container">
      <main>
        <table id="userTable">
          <thead>
            <tr>
              <th>Username</th>
              <th>Email</th>
              <th>Role</th>
              <th>Created At</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody id="userTableBody">
            <!-- User data will be dynamically added here -->
          </tbody>
        </table>
      </main>
    </div>
    <script>
      const body = document.querySelector("body");
      const header = document.querySelector(".header");
      const sidebar = document.querySelector(".sidebar");
      const menuBtn = document.querySelector(".menu-btn");
      const cancelBtn = document.querySelector(".cancel-btn");

      menuBtn.onclick = () => {
        sidebar.classList.add("active");
        menuBtn.classList.add("hide");
        body.classList.add("disabledScroll");
      };

      cancelBtn.onclick = () => {
        sidebar.classList.remove("active");
        menuBtn.classList.remove("hide");
        body.classList.remove("disabledScroll");
      };

      window.onscroll = () => {
        this.scrollY > 20
          ? header.classList.add("sticky")
          : header.classList.remove("sticky");
      };

      // Function to fetch users and populate the table
      async function fetchUsers() {
        const response = await fetch("http://localhost:3000/getUsers");
        const data = await response.json();

        const userTableBody = document.getElementById("userTableBody");
        userTableBody.innerHTML = ""; // Clear existing data

        data.users.forEach((user) => {
          const row = document.createElement("tr");
          row.innerHTML = `
            <td>${user.username}</td>
            <td>${user.email}</td>
            <td>${user.role}</td>
            <td>${new Date(user.createdAt).toLocaleDateString()}</td>
            <td><button class="edit-button" onclick="editUser('${user._id}')">Edit</button></td>
          `;
          userTableBody.appendChild(row);
        });
      }

      function editUser(userId) {
        window.location.href = `/editUzer/${userId}`;
      }

      fetchUsers();
    </script>
  </body>
</html>
